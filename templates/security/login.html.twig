{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container text-center w-25" style="margin-top: 20px;">
    <form method="post" class="form-signin" style="display: inline;">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <img class="mb-4" src="https://cdn-icons-png.flaticon.com/512/2431/2431736.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <input style="margin: 10px;" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email address" autocomplete="email" required autofocus>
        <input style="margin: 10px;"type="password" name="password" id="inputPassword" class="form-control" placeholder="Passeword" autocomplete="current-password" required>
        <p><a href="/reset-password">Mot de passe oublié ? </a></p>
        <p><a href="/register">Pas encore inscrit? Inscrivez-vous ici </a></p>
        <div class="checkbox mb-3">
            <label>
            <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
        <p class="mt-5 mb-3 text-muted">©Médiathèque</p>
    </form>
</div>
{% endblock %}